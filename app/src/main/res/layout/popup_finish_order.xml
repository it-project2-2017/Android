<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/headingOrderList"
    android:padding="20dp">

    <ListView
        android:id="@+id/popup_finish_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/centerOfOrderList" />

    <TextView
        android:id="@+id/cookTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancelBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp"
        android:layout_marginStart="55dp"
        android:text="Cook"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <TextView
        android:id="@+id/baristaTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cookTV"
        android:layout_below="@+id/cookSpinner"
        android:layout_marginTop="39dp"
        android:text="Barista"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse" />

    <Spinner
        android:id="@+id/cookSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cookTV"
        android:layout_alignParentEnd="true"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/baristaSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/baristaTV"
        android:layout_alignStart="@+id/cookSpinner"
        android:spinnerMode="dialog" />

    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/doneBtn"
        android:layout_alignBottom="@+id/doneBtn"
        android:layout_marginEnd="23dp"
        android:layout_toStartOf="@+id/doneBtn"
        android:text="Cancel" />

    <Button
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/baristaSpinner"
        android:layout_alignParentBottom="true"
        android:text="Done" />

</RelativeLayout>