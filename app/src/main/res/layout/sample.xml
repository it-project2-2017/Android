<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/confirmOrderCL">

    <GridLayout
        android:layout_width="416dp"
        android:layout_height="53dp"
        android:rowCount="1"
        android:columnCount="4"
        android:id="@+id/order_header"
        android:background="@drawable/layout_bg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_bg_white"
            android:layout_margin="5dp">

            <TextView
                android:text="@string/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"/>

            <TextView
                android:text="@string/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:text="@string/Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="normal|bold" />
        </GridLayout>

    </GridLayout>

    <GridLayout
        android:layout_width="584dp"
        android:layout_height="151dp"
        android:rowCount="2"
        android:columnCount="4"

        android:background="@drawable/layout_bg"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_bg_white"
            android:layout_margin="5dp">

            <Button
                android:text="@string/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button18"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                style="@style/Widget.AppCompat.Button" />

            <Button
                android:text="@string/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button20"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <Button
                android:text="@string/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button21"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <Button
                android:text="@string/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button19"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <Button
                android:text="@string/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <Button
                android:text="@string/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <TextView
                android:text="Sample Test"
                android:id="@+id/test"/>

        </GridLayout>

    </GridLayout>


    <GridLayout
        android:layout_width="584dp"
        android:layout_height="457dp"
        android:id="@+id/display_menu"
        android:rowCount="3"
        android:columnCount="4"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <GridView
            android:stretchMode="columnWidth"
            android:columnWidth="100dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:id="@+id/productGV" />
    </GridLayout>

    <GridLayout
        android:layout_width="416dp"
        android:layout_height="115dp"
        android:id="@+id/gridLayout"
        android:background="@drawable/layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp">


        <GridLayout
            android:id="@+id/sendOrderGV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_bg_white"
            android:layout_margin="5dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:text="Clear Orders"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/clearOrderBtn"
                        android:layout_row="1"
                        android:layout_column="2" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:text="Back"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/button7"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1" />

                    <Button
                        android:text="@string/sendOrder"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/sendOrderBtn"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:layout_columnWeight="1" />

                </TableRow>
            </TableLayout>

        </GridLayout>

    </GridLayout>

    <GridLayout
        android:layout_height="431dp"
        android:layout_width="416dp"
        android:background="@drawable/layout_bg"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/order_header"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="1"
            android:columnCount="4"
            android:id="@+id/orders_layout"
            android:layout_margin="5dp"
            android:background="@drawable/layout_bg_white">


            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/orderLV" />
        </GridLayout>

    </GridLayout>




</android.support.constraint.ConstraintLayout>