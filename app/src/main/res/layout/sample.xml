<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="416dp"
        android:layout_height="53dp"
        tools:layout_editor_absoluteY="8dp"
        android:rowCount="1"
        android:columnCount="4"
        android:id="@+id/order_header"
        app:layout_constraintRight_toRightOf="@+id/scrollView3">

        <TextView
            android:text="@string/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <TextView
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <TextView
            android:text="@string/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
    </GridLayout>

    <GridLayout
        android:layout_width="416dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/scrollView3"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp">


        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="2" />
    </GridLayout>

    <GridLayout
        android:layout_width="584dp"
        android:layout_height="457dp"
        android:id="@+id/display_menu"
        android:rowCount="3"
        android:columnCount="4"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        app:layout_constraintLeft_toRightOf="@+id/order_header"
        android:layout_marginLeft="8dp">

        <GridView
            android:stretchMode="columnWidth"
            android:columnWidth="100dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numColumns="auto_fit"
            android:id="@+id/productGV" />
    </GridLayout>

    <GridLayout
        android:layout_width="584dp"
        android:layout_height="151dp"
        android:rowCount="2"
        android:columnCount="4"

        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintRight_toRightOf="@+id/display_menu">

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button19"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

    </GridLayout>

    <ScrollView
        android:layout_width="416dp"
        android:layout_height="431dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/scrollView3"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        android:layout_marginBottom="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="1"
            android:columnCount="4"
            android:id="@+id/orders_layout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"/>

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker2"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:gravity="top|left" />

            <TextView
                android:text="Burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1" />

            <TextView
                android:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1" />
        </GridLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>