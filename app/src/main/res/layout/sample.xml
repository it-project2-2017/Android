<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="416dp"
        android:layout_height="53dp"
        android:rowCount="1"
        android:columnCount="4"
        android:id="@+id/order_header"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableLayout
            android:layout_width="416dp"
            android:layout_height="53dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_marginLeft="30dp"
                    android:text="Name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:text="Quantity"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

                <TextView
                    android:text="Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline" />
            </TableRow>

        </TableLayout>


    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:layout_width="584dp"
        android:layout_height="0dp"
        android:rowCount="2"
        android:columnCount="4"

        app:layout_constraintRight_toRightOf="@+id/display_menu"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/display_menu"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button20"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button19"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:text="@string/categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>

    </GridLayout>


    <GridLayout
        android:layout_width="584dp"
        android:layout_height="457dp"
        android:id="@+id/display_menu"
        android:rowCount="3"
        android:columnCount="4"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        app:layout_constraintLeft_toRightOf="@+id/order_header"
        android:layout_marginLeft="8dp">

        <GridView
            android:stretchMode="columnWidth"
            android:columnWidth="100dp"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:id="@+id/productGV" />
    </GridLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="416dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="41dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.82">

        <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/orderLV"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />
    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:layout_width="416dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent">


        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button9"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="2" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>