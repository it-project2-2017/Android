<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <item name="colorPrimary">@color/navigationBarColor</item>
        <item name="android:statusBarColor">?android:attr/textColorPrimaryNoDisable</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:textColorPrimary">?android:attr/textColorPrimaryInverse</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">?android:attr/textColorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Pandora" parent="android:Theme.Material" >
        <item name="android:colorBackground">?android:attr/colorBackground</item>
        <item name="android:colorForeground">@color/navigationBarColor</item>
        <item name="android:navigationBarColor">?android:attr/colorForeground</item>
        <item name="android:textColorSecondaryInverse">@color/darkviolet</item>
    </style>

    

    <style name="Pandora_main" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/navigationBarColor</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:textColorPrimary">?android:attr/textColorPrimaryInverse</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorTertiary">@color/navigationBarColor</item>


        <item name="colorButtonNormal">@color/button</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/clicked_button</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorSecondary">@color/navigationBarColor</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/brand_layout</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#546E7A</item>
        <item name="android:textColorPrimary">#37474F</item>
        <item name="android:background">#B0BEC5</item>
    </style>

</resources>
